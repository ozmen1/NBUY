@model Product
@{
    ViewData["Title"] = "CreateProduct";
}
<h1 class="display-6">Create Product</h1>
<hr>
<form asp-controller="Home" asp-action="CreateProduct" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label>Product Name:</label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Name" class="form-control">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label>Product Category:</label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Category" class="form-control">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label>Product Price:</label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Price" class="form-control">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-check-label">Is Approved:</label>
        </div>
        <div class="col-4">
            <input type="checkbox" asp-for="IsApproved" class="form-check-input">
        </div>
    </div>
    <div class="row">
        <div class="col-6 text-end">
            <input type="submit" name="Create" class="btn btn-success btn-lg">
        </div>
    </div>
</form>
@if (Model != null)
{
    <hr>
    <div>
        <p class="text-danger">@Model.Name</p>
        <p>@Model.Category</p>
        <p>@Model.Price</p>
        <p>@(Model.IsApproved ? "Approved" : "Not Approved")</p>
    </div>
}
























