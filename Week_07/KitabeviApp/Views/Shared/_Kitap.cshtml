@* Burası her bir kitabı göstermeye yarar *@
@model Kitap 
<div class="col-3">
    <div class="card text-center mb-4" style="height: 300px;">
        <div class="card-header bg-primary text-white">
            <h4 class="m-0 display-6 fs-6 fw-normal">@Model.Ad</h1>
        </div>
        <div class="card-body bg-light">
            <div class="card-title">
                @Model.Kategori.Ad
            </div>
            <div>
                <p>Yazar: @Model.Yazar.Ad</p>
                <p>Basım Yılı: @Model.BasimYili</p>
                <p>Sayfa Sayısı: @Model.SayfaSayisi</p>
            </div>
        </div>
        <div class="card-footer">
            <a asp-controller="Home" asp-action="Detay" asp-route-id="@Model.Id" class="btn btn-sm btn-info">İncele</a>
            <a class="btn btn-sm btn-success">Sepete Ekle</a>
        </div>
    </div>
</div>
        
