@model Yazar
@{
    ViewData["Title"] = "YazarEkle";
}

<h1 class="display-6">Yeni Yazar Oluştur</h1>
<hr>

<form asp-controller="Home" asp-action="YazarEkle" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Ad"></label>
        </div>
        <div class="col-4">
            <input type="text" class="form-control" asp-for="Ad">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="DogumYili"></label>
        </div>
        <div class="col-4">
            <input type="text" class="form-control" asp-for="DogumYili">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Cinsiyet"></label>
        </div>
        <div class="col-4">
            @* <input type="text" class="form-control" asp-for="Cinsiyet"> *@
            <input type="radio" class="form-check-input" asp-for="Cinsiyet" value="K" checked><label>Kadın</label>
            <input type="radio" class="form-check-input" asp-for="Cinsiyet" value="E"><label>Erkek</label>

        </div>
    </div>
    <div class="row mb-2">
        <div class="col-4 offset-2">
            <input type="submit" class="btn btn-primary" value="Kaydet">
        </div>
    </div>
</form>