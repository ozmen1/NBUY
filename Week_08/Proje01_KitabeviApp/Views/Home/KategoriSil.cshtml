@model Kategori
@{
    ViewData["Title"] = "Kategori Sil";
}

<h1 class="display-6 alert alert-danger">DİKKAT KATEGORİ SİLİNECEK! EMİN MİSİNİZ?</h1>
<hr>
<form asp-controller="Home" asp-action="KategoriSil" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label asp-for="Ad" class="form-label"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Ad" class="form-control">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label asp-for="Aciklama" class="form-label"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Aciklama" class="form-control">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-6 d-grid">
            <input type="submit" class="btn btn-danger" value="Sil">
        </div>
    </div>
</form>
