<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kitap Adı</th>
            <th>Yazar</th>
            <th>Basım Yılı</th>
            <th>Sayfa Sayısı</th>
            <th>Kategori</th>
            <th width="135">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Ad</td>
                <td><a asp-controller="Home" asp-action="YazarListesi" asp-route-id=@k.Id>@k.Yazar.Ad</a></td>
                <td>@k.BasimYili</td>
                <td>@k.SayfaSayisi</td>
                <td><a asp-controller="Home" asp-action="KategoriListesi" asp-route-id=@k.Id>@k.Kategori.Ad</a></td>
                <td>
                    <a class="btn btn-sm btn-warning me-2" asp-controller="Home" asp-action="KitapGuncelle"
                    asp-route-id=@k.Id>Güncelle</a>
                    <a class="btn btn-sm btn-danger me-2" asp-controller="Home" asp-action="KitapSil"
                    asp-route-id=@k.Id>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>