@model UserManageDto
<h1>Hesabımı Yönet</h1>
<hr />
<form asp-controller="Account"
      asp-action="Manage"
      method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" asp-items="@Model.GenderSelectList" class="form-select">
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="col-12 btn btn-primary">Değişiklikleri Kaydet</button>
            <a asp-controller="Home" asp-action="Index" class=" col-12 btn btn-light">Vazgeç</a>
        </div>
    </div></>

</form>