@using ShoppingApp.Web.Models.Dtos
@model ProductDto
<div class="card mb-2" style="height:300px">
    <div class="card-img p-2 text-center">
        <img class="img-fluid" style="width:50px; height:105px" src="/images/@Model.ImageUrl"/>
    </div>
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Name</h5>
        <div class="text-muted text-center">@($"{Model.Price:C2}")</div> 
@*        //:C para birimi olduğını gösterir C0 C1 C2 gibi kullanımlar vardır.*@
@*         <div class="text-success text-center">@($"{Model.DateAdded:d}")</div>*@
@*        //:D :d :F gibi farklı formatları vardır*@
    </div>
    <div class="card-footer bg-light d-flex justify-content-around">
        <a class="btn btn-primary btn-sm"
            asp-controller="Shop"
            asp-action="ProductDetails"
            asp-route-producturl=@Model.Url
        >İncele</a>
        <a class="btn btn-success btn-sm">Sepete Ekle</a>

    </div>
</div>
